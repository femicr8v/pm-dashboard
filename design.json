{
  "elementStyling": {
    "layout": {
      "pageBackground": "#0B0B0B",
      "sectionBackground": "#0F0F0F",
      "maxContentWidth": "1200px"
    },
    "typography": {
      "h1": {
        "color": "#FFFFFF",
        "fontSize": "2.5rem",
        "fontWeight": 700
      },
      "h2": {
        "color": "#FFFFFF",
        "fontSize": "2rem",
        "fontWeight": 600
      },
      "h3": {
        "color": "#FFFFFF",
        "fontSize": "1.5rem",
        "fontWeight": 600
      },
      "paragraph": {
        "color": "#D0D0D0",
        "fontSize": "1rem",
        "lineHeight": "1.6"
      },
      "highlightText": {
        "color": "#FFD95B",
        "fontWeight": 600
      },
      "mutedText": {
        "color": "#A1A1A1"
      }
    },
    "cards": {
      "container": {
        "background": "linear-gradient(180deg, rgba(17,17,17,0.9) 0%, rgba(13,13,13,0.9) 100%)",
        "border": "1px solid #1E1E1E",
        "shadow": "0 4px 12px rgba(0,0,0,0.25)",
        "borderRadius": "8px",
        "padding": "20px"
      },
      "title": {
        "color": "#FFFFFF",
        "fontSize": "1.25rem",
        "fontWeight": 600
      },
      "content": {
        "color": "#CCCCCC"
      },
      "icons": {
        "fill": "#FFD95B",
        "background": "transparent"
      }
    },
    "buttons": {
      "primary": {
        "background": "linear-gradient(90deg, #FFD95B 0%, #FEC544 100%)",
        "text": "#0B0B0B",
        "borderRadius": "6px",
        "fontWeight": 600,
        "hover": {
          "background": "linear-gradient(90deg, #FEC544 0%, #FDB833 100%)"
        },
        "active": {
          "background": "linear-gradient(90deg, #FDB833 0%, #FCA311 100%)"
        },
        "disabled": {
          "background": "#3A3A3A",
          "text": "#888888"
        }
      },
      "secondary": {
        "background": "transparent",
        "border": "1px solid #FFD95B",
        "text": "#FFD95B",
        "hover": {
          "background": "rgba(255,217,91,0.1)"
        }
      }
    },
    "navigation": {
      "background": "#0B0B0B",
      "linkText": "#FFFFFF",
      "linkHover": "#FFD95B",
      "iconColor": "#FFD95B"
    },
    "icons": {
      "primary": {
        "fill": "#FFD95B"
      },
      "secondary": {
        "fill": "#FFFFFF"
      }
    },
    "gradients": {
      "heroBackground": "linear-gradient(180deg, #0B0B0B 0%, #0F0F0F 100%)",
      "highlightGradient": "linear-gradient(90deg, #FFD95B 0%, #FEC544 100%)"
    },
    "shadows": {
      "card": "0px 4px 12px rgba(0,0,0,0.25)",
      "button": "0px 2px 6px rgba(0,0,0,0.2)"
    },
    "borders": {
      "cardBorder": "#1E1E1E",
      "inputBorder": "#2C2C2C"
    },
    "states": {
      "hover": {
        "scale": 1.02,
        "shadow": "0px 6px 16px rgba(0,0,0,0.3)"
      },
      "focus": {
        "outline": "2px solid #FFD95B"
      },
      "active": {
        "scale": 0.98,
        "shadow": "0px 2px 8px rgba(0,0,0,0.25)"
      }
    }
  },
  "rules": {
    "DO_NOT": [
      "Do not apply card background gradients to icons — icons must remain solid color.",
      "Do not use button gradient on text elements.",
      "Do not apply card shadows to buttons — use button-specific shadows.",
      "Do not use hover scale effects on navigation icons."
    ]
  }
}
